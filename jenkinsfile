pipeline {
    agent any

    environment {
        JAVA_HOME = tool name: 'JDK11', type: 'jdk'
        MVN_HOME  = tool name: 'Maven 3.8', type: 'maven'
        PATH = "${env.JAVA_HOME}/bin:${env.MVN_HOME}/bin:${env.PATH}"
    }

    stages {
        stage('Checkout') {
            steps {
                git url: 'https://github.com/Naveen1-6/BookWorm-Library-Management-System.git', branch: 'main'
            }
        }

        stage('Build') {
            steps {
                sh 'mvn clean compile'
            }
        }

        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }

        stage('Package') {
            steps {
                sh 'mvn package -DskipTests'
            }
        }

        stage('Archive Artifacts') {
            steps {
                archiveArtifacts artifacts: 'target/*.jar', fingerprint: true
            }
        }

    }

    post {
        success {
            echo 'Build succeeded!'
        }
        failure {
            echo 'Build failed. Check the logs.'
        }
    }
}

